name=

tmux has-session -t ${name}
if [ $? != 0 ]
then
  tmux new-session -s ${name} -n editor -d

  tmux split-window -v -p 25 -t ${name}
  tmux new-window -n console -t ${name}
  tmux split-window -v -p 50 -t ${name}:1

  tmux send-keys -t ${name}:0.0 "cd ~/dev/${name} && clear && vim ." C-m
  tmux send-keys -t ${name}:0.1 "cd ~/dev/${name} && clear && git status" C-m
  tmux send-keys -t ${name}:1.0 "cd ~/dev/${name} && clear && rails console" C-m
  tmux send-keys -t ${name}:1.1 "cd ~/dev/${name} && clear && tail -f log/development.log" C-m
fi
