alias vimconfig="vim ~/.vimrc"
alias bashconfig="vim ~/.bash_profile"
alias zshconfig="vim ~/.zshrc"
alias tmuxconfig="vim ~/.tmux.conf"

alias be="bundle exec"
alias rc="bundle exec rails console"
alias rs="bundle exec rails server"

alias gg="git grep -e"
alias gco="git checkout"
alias gst="git status"
alias gfp="git fetch && git pull --rebase origin "
alias glo="git log --oneline --decorate"

alias ctagsr="ctags -R --exclude=log --exclude=coverage --exclude=.git -h 'rb.js.coffee.scss.html.haml.yml' -f .tags &> /dev/null"
alias st="open -a SourceTree ."

alias curl="noglob curl"

alias brspec="bin/rspec"
alias brake="bin/rake"
alias brails="bin/rails"
alias bcucumber="bin/cucumber"
